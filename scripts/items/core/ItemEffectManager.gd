				target.attack_cooldown_modifier = 0.0
				if target.has_node("Sprite2D"):
					var final_color = Color.RED if target.get_side() else Color.WHITE
					target.get_node("Sprite2D").modulate = final_color
		print("‚öîÔ∏è Rage d'Ar√®s expir√©")


